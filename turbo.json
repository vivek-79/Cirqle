{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "db:migrate":{
      "cache": false,
      "persistent": true
    },
    "db:generate":{
      "cache": false
    },
    "db:deploy":{
      "cache": false
    },
    "build": {
      "dependsOn": ["^build","^db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
